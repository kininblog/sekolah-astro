---
// src/pages/admin/posts/index.astro
export const prerender = false; // Mode Server agar data selalu fresh saat admin buka

import AdminLayout from "@/layouts/AdminLayout.astro";

// --- 1. FETCH DATA DARI GOOGLE SHEETS ---
let posts = [];
let error = null;

try {
  const SCRIPT_URL = import.meta.env.PUBLIC_GOOGLE_SCRIPT_URL;
  const response = await fetch(`${SCRIPT_URL}?action=get_all&table=tbl_posts`);
  const result = await response.json();

  if (result.status === "success") {
    // Sort dari yang terbaru
    posts = result.data.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
  } else {
    error = result.message;
  }
} catch (e) {
  error = "Gagal terhubung ke database. Cek koneksi internet.";
  console.error(e);
}
---

<AdminLayout title="Semua Postingan">

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
            <h2 class="text-2xl font-bold text-slate-800">Semua Postingan</h2>
            <p class="text-sm text-slate-500">Kelola artikel dan berita sekolah di sini.</p>
        </div>
        <div class="flex gap-2">
            <a href="/admin/posts/new" class="inline-flex items-center gap-2 px-4 py-2.5 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition shadow-sm hover:shadow-md">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Tulis Baru
            </a>
        </div>
    </div>

    <div class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden">
        
        <div class="p-4 border-b border-slate-100 flex flex-col sm:flex-row justify-between gap-4 items-center bg-slate-50/50">
            <div class="relative w-full sm:w-72">
                <i data-lucide="search" class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400"></i>
                <input type="text" id="searchInput" placeholder="Cari judul berita..." class="w-full pl-9 pr-4 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition">
            </div>
            <div class="text-xs text-slate-500 font-medium">
                Total: <span class="text-indigo-600 font-bold">{posts.length}</span> Artikel
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-slate-50 border-b border-slate-200 text-xs uppercase text-slate-500 font-semibold tracking-wider">
                        <th class="px-6 py-4 w-16 text-center">Cover</th>
                        <th class="px-6 py-4">Judul & Info</th>
                        <th class="px-6 py-4">Kategori</th>
                        <th class="px-6 py-4 text-center">Status</th>
                        <th class="px-6 py-4 text-center">Tanggal</th>
                        <th class="px-6 py-4 text-end">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 text-sm" id="postTableBody">
                    
                    {posts.length > 0 ? posts.map((post) => (
                        <tr class="hover:bg-slate-50/80 transition group">
                            
                            {/* 1. Thumbnail */}
                            <td class="px-6 py-4">
                                <div class="w-12 h-12 rounded-lg bg-slate-100 border border-slate-200 overflow-hidden flex-shrink-0">
                                    {post.thumbnail ? (
                                        <img src={post.thumbnail} alt="Thumb" class="w-full h-full object-cover" />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-slate-400">
                                            <i data-lucide="image" class="w-5 h-5"></i>
                                        </div>
                                    )}
                                </div>
                            </td>

                            {/* 2. Title & Slug */}
                            <td class="px-6 py-4 max-w-xs">
                                <a href={`/blog/${post.slug}`} target="_blank" class="font-bold text-slate-800 hover:text-indigo-600 line-clamp-1 mb-1 block transition">
                                    {post.title}
                                </a>
                                <div class="flex items-center gap-1 text-xs text-slate-400 font-mono">
                                    <span class="bg-slate-100 px-1.5 py-0.5 rounded border border-slate-200 truncate max-w-[200px]">/{post.slug}</span>
                                    <a href={`/blog/${post.slug}`} target="_blank" class="hover:text-indigo-600 p-1">
                                        <i data-lucide="external-link" class="w-3 h-3"></i>
                                    </a>
                                </div>
                            </td>

                            {/* 3. Category */}
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-100">
                                    {post.categories ? post.categories.split(',')[0] : 'Umum'}
                                </span>
                            </td>

                            {/* 4. Status */}
                            <td class="px-6 py-4 text-center">
                                {post.status === 'published' ? (
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-200">
                                        <span class="w-1.5 h-1.5 rounded-full bg-green-500"></span> Published
                                    </span>
                                ) : (
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-yellow-50 text-yellow-700 border border-yellow-200">
                                        <span class="w-1.5 h-1.5 rounded-full bg-yellow-500"></span> Draft
                                    </span>
                                )}
                            </td>

                            {/* 5. Date */}
                            <td class="px-6 py-4 text-center text-slate-500 text-xs">
                                {new Date(post.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' })}
                                <br/>
                                <span class="text-[10px] text-slate-400">{new Date(post.created_at).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' })}</span>
                            </td>

                            {/* 6. Actions */}
                            <td class="px-6 py-4 text-end">
                                <div class="inline-flex items-center gap-2">
                                    {/* Edit Button */}
                                    <a href={`/admin/posts/edit/${post.id}`} class="p-2 text-slate-500 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition" title="Edit">
                                        <i data-lucide="edit-3" class="w-4 h-4"></i>
                                    </a>
                                    
                                    {/* Delete Button */}
                                    <button 
                                        onclick={`deletePost('${post.id}', '${post.title}')`}
                                        class="p-2 text-slate-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition" 
                                        title="Hapus"
                                    >
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    )) : (
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center text-slate-400">
                                    <div class="bg-slate-50 p-4 rounded-full mb-3">
                                        <i data-lucide="file-x" class="w-8 h-8"></i>
                                    </div>
                                    <p class="text-slate-600 font-medium">{error || "Belum ada data postingan."}</p>
                                    <p class="text-xs mt-1">Silakan buat postingan baru untuk memulai.</p>
                                </div>
                            </td>
                        </tr>
                    )}
                </tbody>
            </table>
        </div>
    </div>

    <script is:inline>
        // 1. Search Logic (Client Side Filtering)
        const searchInput = document.getElementById('searchInput');
        const tableBody = document.getElementById('postTableBody');
        const rows = tableBody.getElementsByTagName('tr');

        searchInput.addEventListener('keyup', function() {
            const filter = searchInput.value.toLowerCase();
            for (let i = 0; i < rows.length; i++) {
                // Ambil text dari kolom judul (index 1)
                const titleCol = rows[i].getElementsByTagName("td")[1];
                if (titleCol) {
                    const txtValue = titleCol.textContent || titleCol.innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        rows[i].style.display = "";
                    } else {
                        rows[i].style.display = "none";
                    }
                }
            }
        });

        // 2. Delete Logic
        async function deletePost(id, title) {
            if(!confirm(`⚠️ Apakah Anda yakin ingin menghapus postingan:\n"${title}"?\n\nTindakan ini tidak bisa dibatalkan.`)) return;

            // Cari tombol yang diklik untuk loading state
            const btn = event.currentTarget; // Mengambil elemen tombol yang diklik
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<i class="animate-spin w-4 h-4 border-2 border-current border-t-transparent rounded-full"></i>';
            btn.disabled = true;

            try {
                // Ambil URL dari fetch yang sudah ada di API project kita
                // Karena ini inline script, kita hardcode atau pass variable.
                // Cara terbaik di Astro Inline Script adalah mengambil dari meta tag atau hidden input jika env var tidak tembus.
                // TAPI, untuk simplisitas, kita gunakan relative path ke API proxy kita.
                
                const response = await fetch('/api/posts', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({
                        action: 'delete',
                        id: id
                    })
                });

                if(response.ok) {
                    // Hapus baris dari tabel tanpa reload
                    const row = btn.closest('tr');
                    row.style.transition = 'all 0.5s';
                    row.style.opacity = '0';
                    setTimeout(() => row.remove(), 500);
                    
                    // Update counter (opsional)
                    // alert("✅ Berhasil dihapus");
                } else {
                    throw new Error('Gagal menghapus');
                }

            } catch (error) {
                alert("❌ Error: " + error.message);
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }
        
        // Expose function to window agar bisa dipanggil onclick di HTML
        window.deletePost = deletePost;
    </script>

</AdminLayout>
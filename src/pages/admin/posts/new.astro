---
// src/pages/admin/posts/new.astro
export const prerender = false;

// 1. Import CSS Lokal (Sama seperti dashboard)
import "@/styles/main.css";

import PostEditor from "@/components/admin/PostEditor.jsx";
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tulis Berita Baru - Admin</title>
    
    <script is:inline src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; }
        
        /* 3. Style Khusus Editor (Biar mirip WordPress) */
        /* Kita override class Quill agar sesuai tema Tailwind lokal */
        :global(.ql-toolbar) {
            background-color: #f8fafc; /* slate-50 */
            border-color: #e2e8f0 !important; /* slate-200 */
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }
        :global(.ql-container) {
            background-color: white;
            border-color: #e2e8f0 !important;
            border-bottom-left-radius: 0.5rem;
            border-bottom-right-radius: 0.5rem;
            font-size: 1rem;
            min-height: 400px;
        }
    </style>
</head>
<body class="bg-gray-50 text-slate-800">

    <div class="flex min-h-screen">
        
        <aside class="w-64 bg-slate-900 text-white hidden md:flex flex-col flex-shrink-0">
            <div class="h-16 flex items-center px-6 bg-slate-950 border-b border-slate-800">
                <i data-lucide="shield" class="w-6 h-6 text-blue-500 mr-3"></i>
                <span class="font-bold tracking-wider text-lg">ADMIN</span>
            </div>
            <nav class="flex-1 px-3 py-6 space-y-1">
                <a href="/admin" class="flex items-center gap-3 px-3 py-2.5 text-slate-300 hover:bg-slate-800 hover:text-white rounded-lg transition">
                    <i data-lucide="layout-dashboard" class="w-5 h-5"></i>
                    <span class="font-medium">Dashboard</span>
                </a>
                <p class="px-3 pt-4 text-xs font-bold text-slate-500 uppercase">Menu</p>
                <a href="/admin/posts" class="flex items-center gap-3 px-3 py-2.5 text-slate-300 hover:bg-slate-800 hover:text-white rounded-lg transition">
                    <i data-lucide="file-text" class="w-5 h-5"></i>
                    <span class="font-medium">Semua Berita</span>
                </a>
                <a href="/admin/posts/new" class="flex items-center gap-3 px-3 py-2.5 bg-blue-600 text-white rounded-lg shadow transition">
                    <i data-lucide="pen-tool" class="w-5 h-5"></i>
                    <span class="font-medium">Tulis Baru</span>
                </a>
            </nav>
        </aside>

        <main class="flex-1 flex flex-col min-w-0 h-screen overflow-hidden">
            
            <header class="h-16 bg-white shadow-sm border-b border-slate-200 flex items-center justify-between px-6 shrink-0">
                <div class="flex items-center gap-4">
                    <a href="/admin" class="text-slate-500 hover:text-blue-600 transition">
                        <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    </a>
                    <h1 class="text-xl font-bold text-slate-800">Buat Berita Baru</h1>
                </div>
                <div class="text-sm text-slate-500">
                    Mode Editor: <span class="font-bold text-blue-600">Visual</span>
                </div>
            </header>

            <div class="flex-1 overflow-auto p-6 md:p-8">
                <PostEditor client:only="react" />
            </div>

        </main>
    </div>

    <script is:inline>
        lucide.createIcons();
    </script>
</body>
</html>